# Test Mode Configuration (No Docker Required)

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
JWT_SECRET=test_secret_key_change_in_production

# Database (SQLite for local testing)
DATABASE_URL=sqlite:///./eylo_test.db

# Queue (In-memory for local testing)
REDIS_URL=memory://

# API Keys (Optional for basic testing - use "test" values)
APIFY_API_TOKEN=test_token
GEMINI_API_KEY=test_key
FCM_SERVER_KEY=test_key

# Storage (Local filesystem instead of S3)
AWS_S3_BUCKET=test_bucket
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Worker Settings
WORKER_CONCURRENCY=2
RETRY_ATTEMPTS=1
RETRY_DELAY_SECONDS=2

# Test Mode Flag
TEST_MODE=true
